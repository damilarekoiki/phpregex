{
    "name": "ten/phpregex",
    "description": "Intuitive way of working with regex in PHP",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "pestphp/pest": "^4.1",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.91",
        "rector/rector": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Ten\\Phpregex\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Damilare Koiki",
            "email": "koikidamilare@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "cs": "vendor/bin/php-cs-fixer check",
        "cs:fix": "vendor/bin/php-cs-fixer fix",
        "test": "vendor/bin/pest"
    }
}