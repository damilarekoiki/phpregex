{
    "name": "damilarekoiki/phpregex",
    "description": "A tool that provides you with a more readable and intuitive way of working with regex in PHP",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.91",
        "rector/rector": "^2.2",
        "pestphp/pest": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "DamilareKoiki\\PhpRegex\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Damilare Koiki",
            "email": "koikidamilare@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "check:refactor": "./vendor/bin/rector process --dry-run",
        "check:lint": "./vendor/bin/php-cs-fixer check",
        "check:stan": "./vendor/bin/phpstan analyse",
        "test": "./vendor/bin/pest",
        "fix:refactor": "./vendor/bin/rector process",
        "fix:lint": "./vendor/bin/php-cs-fixer fix",
        "fix:stan": "./vendor/bin/phpstan",
        "ci": [
            "@check:refactor",
            "@check:lint",
            "@check:stan",
            "@test"
        ]
    }
}